generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  role      String  @default("user") // admin или user
}

model Instruction {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  fileUrl   String?
  createdAt DateTime @default(now())
}
